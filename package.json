{
  "name": "contest",
  "private": true,
  "scripts": {
    "build:engine": "cd apps/engine && bun run build",
    "build:ws": "cd apps/ws && bun run build",
    "build:backend": "cd apps/backend && bun run build",
    "dev:engine": "cd apps/engine && bun run dev",
    "dev:ws": "cd apps/ws && bun run dev",
    "dev:backend": "cd apps/backend && bun run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "bun-types": "^1.2.21",
    "eslint": "^9.34.0",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.6.2",
    "prisma": "^6.15.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
